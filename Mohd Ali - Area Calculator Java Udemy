public class AreaCalculator {
    public static double area(double radius){
        if(radius &lt;0.0){
            return -1.0;
        }
        else{
            return(Math.PI*radius*radius);
        }
    }
        public static double area(double x, double y){
            if(x&lt;0.0 || y &lt;0.0){
                return -1.0;
            }
            else {
                return (x*y);
            }
        }
     
}
